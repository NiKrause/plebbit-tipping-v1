{
  "name": "@plebbit/tipping-v1",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript API for PlebbitTippingV1 smart contract",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "prebuild": "cp ../contracts/artifacts/contracts/PlebbitTippingV1.sol/PlebbitTippingV1.json src/",
    "build": "tsc",
    "test": "npm run test:unit",
    "test:unit": "node --experimental-vm-modules ../node_modules/.bin/jest test/unit/",
    "test:fork": "node test/integration/mainnet-fork.test.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "node --experimental-vm-modules ../node_modules/.bin/jest test/unit/ --watch",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "dev": "npm run prebuild && tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/test/dist/",
      "<rootDir>/test/integration/"
    ],
    "moduleDirectories": [
      "node_modules",
      "dist"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  },
  "keywords": [
    "plebbit",
    "tipping",
    "ethereum",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plebbit/plebbit-tipping-v1.git",
    "directory": "js-api"
  },
  "bugs": {
    "url": "https://github.com/plebbit/plebbit-tipping-v1/issues"
  },
  "homepage": "https://github.com/plebbit/plebbit-tipping-v1#readme",
  "dependencies": {
    "dotenv": "^17.2.1",
    "ethers": "^6.14.0",
    "multiformats": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "ethers": "^6.14.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
