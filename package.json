{
  "name": "plebbit-tipping-v1",
  "version": "1.0.0",
  "description": "Plebbit Tipping v1 - Decentralized tipping system with smart contracts and JavaScript API",
  "private": true,
  "workspaces": [
    "contracts",
    "js-api"
  ],
  "scripts": {
    "build:contracts": "cd contracts && npm run compile",
    "build:js-api": "cd js-api && npm run build",
    "build": "npm run build:contracts && npm run build:js-api",
    "dev": "npm run build:contracts && cd js-api && npm run dev",
    "test:contracts": "cd contracts && npm test",
    "test:js-api": "cd js-api && npm test",
    "test": "npm run test:contracts && npm run test:js-api",
    "deploy": "cd contracts && npm run deploy",
    "deploy:localhost": "cd contracts && npm run deploy:localhost",
    "deploy:all": "cd contracts && npm run deploy:all",
    "node": "cd contracts && npm run node",
    "node:fork": "cd contracts && npm run node:fork",
    "test:fork": "cd contracts && npm run test:fork",
    "verify:sepolia": "cd contracts && npm run verify:sepolia",
    "verify:amoy": "cd contracts && npm run verify:amoy",
    "verify:baseSepolia": "cd contracts && npm run verify:baseSepolia",
    "install:all": "cd contracts && npm install && cd ../js-api && npm install",
    "clean": "rm -rf contracts/node_modules js-api/node_modules contracts/dist js-api/dist contracts/artifacts contracts/cache",
    "publish:js-api": "cd js-api && npm publish --access public",
    "prepare": "cd js-api && npm install && npm run build"
  },
  "keywords": ["plebbit", "tipping", "ethereum", "blockchain", "solidity", "typescript"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0"
  },
  "main": "js-api/dist/index.js",
  "types": "js-api/dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./js-api/dist/index.js",
      "require": "./js-api/dist/index.js",
      "types": "./js-api/dist/index.d.ts"
    }
  },
  "files": [
    "js-api/dist/**/*",
    "js-api/README.md"
  ]
}
